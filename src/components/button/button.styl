.button
	width 138px
	height 41px
	display inline-flex
	align-items center
	justify-content center
	vertical-align bottom
	border 0
	border-radius 4px
	box-shadow 0 0 59px rgba(255, 76, 124, 0.35)
	background-image linear-gradient(to right, #ca3e50 0%, #ff004e 100%)
	color #fff
	font 700 16px mainFont
	line-height 1.5rem
	text-transform uppercase
	text-align center
	cursor pointer
	text-decoration none
	transition background 1s linear
	&:hover
		color #000
		background-image linear-gradient(to right, #fcca00 0%, #fff405 100%)
		box-shadow: 0 0 32px rgba(252, 203, 0, 0.35);
	&_block
		width 100%
	&_lg
		height 50px
		width 288px
		padding .5rem 1.35rem
		font-size 30px
	&_white
		color pink
		background-image linear-gradient(to right, #fff 0%, #fff 100%)
		box-shadow 0 0 59px rgba(187, 223, 245, 0.35)
		&:hover
			color #fff
			background-image linear-gradient(to right, #ca3e50 0%, #ff004e 100%)
	&_signIn
		box-shadow 0 0 59px rgba(255, 76, 124, 0.35)
		border-radius 4px
		border 1px solid pink
		background transparent
		color #fb054e
		&:hover
			box-shadow 0 0 59px rgba(145, 145, 145, 0.35)
			border-radius 4px
			border 1px solid #f8f8f8
			background-image linear-gradient(to right, #d0ebfc 0%, #e4ecf2 100%)   
		
@media screen and (max-width: 1200px)
	.button
		width 105px
		height 31px
		font-size 12px
		&_lg
			height 50px
			width 288px
			padding .5rem 1.35rem
			font-size 30px
