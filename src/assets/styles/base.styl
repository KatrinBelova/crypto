*
  box-sizing border-box
  margin 0
  padding 0
  font-family inherit

:focus
  outline none

::-moz-focus-inner
  border none

::placeholder
  color #fff

html, body
  min-height 100%
  height 100%
  display flex
  flex-direction column

html
  font 400 16px/1.5 mainFont, 'Roboto', 'Helvetica', 'Arial', sans-serif
  font-family mainFont
  // @media (max-width 768px)
  //   font-size 14px

body
  margin 0
  padding 0
  color #363636
  background #fff
  overflow-x hidden

img
  max-width 100%
  vertical-align bottom

hr
  border-top 0
  border-color #8c8c8c

a
  color inherit
  cursor default
  text-decoration none
  &[href]
    cursor pointer

p
  // margin-top .5rem
  // margin-bottom .5rem
  font-family mainFont

//ul
//  margin 0
//  padding 0
//  list-style-position inside

ul
  list-style none
  padding 0

table
  border-spacing 0
  border-collapse collapse

textarea
  resize none

address
  font-style normal

h1, h2
  text-transform uppercase
  font 700 40px mainFont
  line-height 46px
  
h3
  text-transform uppercase
  font-weight 700
  font-size 20px
  font-family mainFont
  line-height @font-size + 6px

.text_color
  &_pink
    color pink
  &_gray
    color gray
    
.active > a
  color #151e29
  
.display_hidden
  display none
  
.display_visible_flex
  display flex

.header-top
  transform translateY(-100%)
  
.fixed-header
  position fixed
  width 100%
  transform translateY(0)
  transition all .5s ease-in-out
  top 0
  left 0
  z-index 99
