.join
	position relative
	margin-bottom 60px
	// overflow-x hidden
	&__background
		position absolute
		width 100%
		bottom -420px
		height 1895px
		overflow hidden
		z-index -1
		&_inner
			position absolute
			width 150%
			height 915px
			bottom 0
			background-image linear-gradient(-117deg, #ca3e50 0%, #ff004e 100%)
			transform rotate(-23deg)
			transform-origin 0 100%
	&__community,
	&__gains
		box-shadow 0 0 59px rgba(218, 238, 250, 0.35)
		border-radius 4px
		background-color rgba(255,255,255, 0.95)
		padding-top 72px
		padding-bottom 100px
		margin-bottom 20px
		p
			padding-top 30px
			text-align center
			color #56616f
			font 700 20px mainFont
			line-height 26px
	&__gains
		position relative
	&__title
		color pink
		padding-bottom 20px
		text-align center
	h3
		text-align center
		padding-top 40px
		padding-bottom 40px
		color #0a0e12
	&__profit
		width 100%
		box-shadow 0 0 59px rgba(255, 76, 124, 0.35)
		border-radius 4px
		background-image linear-gradient(to right, #ca3e50 0%, #ff004e 100%)
		p
			padding 12px 70px
			color #fff
	
.join__button.button
	position absolute
	font 700 30px mainFont
	text-transform uppercase
	margin auto
	width w = 159px
	text-align center
	height 159px
	border-radius 50%
	box-shadow 0 0 68px rgba(253, 53, 113, 0.46)
	background-color #fd024e
	opacity 0.8
	bottom -(w / 2)
	right 0
	left 0
@media screen and (max-width: 1540px)
	.join
		&__background
			bottom -300px
			
@media screen and (max-width: 1200px)
	.join
		&__background
			bottom -230px
			&_inner
				height 945px
		&__title
			font-size 30px
			line-height @font-size+6px
			padding-bottom 10px
		&__profit
			p
				padding 20px 40px
		&__community,
		&__gains
			p
				padding-top 25px
		&__community
			padding-top 80px
			padding-bottom 50px
		&__gains
			padding-top 50px
			padding-bottom 95px

@media screen and (max-width: 768px)
	.join
		&__background
			bottom -80px
			&_inner
				width 300%
				height 1425px
		&__title
			font-size 25px
			line-height @font-size+6px
			padding-bottom 0
		p
			font-size 18px
		&__community,
		&__gains
			padding-top 38px
		&__community	
			padding-bottom 40px
		&__gains
			padding-bottom 95px
		h3
			font-size 18px
			line-height @font-size+6px
			padding-bottom 35px
		&__profit
			p
				padding 12px 20px
	.join__button.button
		width 127px
		height 127px
		bottom -63px
		font-size 23px
