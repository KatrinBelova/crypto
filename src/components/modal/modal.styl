.modal
  position relative
  width 1200px
  margin-bottom 15px
  padding 20px
  background-color #f7faff
  box-shadow 0 0 87px rgba(0, 0, 0, 0.15)
  &__payment
    background-color #fff
  &__close
    position absolute
    top 5px
    right 10px
    width 30px
    height 30px
    font-size 30px
    line-height 30px
    cursor pointer
    &:before
      content '\f057';
      display none
      font-family 'Font Awesome 5 Solid'
  &__card,
  &__paypal,
  &__crypto
    display flex
    flex-direction column
    align-items center
    img
      margin-top 35px
      margin-bottom 20px
      width 157px
      height 107px
  &__button
    margin-bottom 35px
  &__agreement
    text-align center
    font 400 14px mainFont
    color #56616f
    margin-top 20px
    margin-bottom 20px
.modal
	h3, h2
		text-align center
	h3
		margin-top 25px
	h2
		font-size 30px


@media screen and (max-width: 1200px)
	.modal
    width 600px
		&__card,
		&__paypal,
		&__crypto
			img
				width 127px
				height 87px

@media screen and (max-width: 768px)
	.modal
    width 315px
    height 600px
    top 10px
		h2
			font-size 22px
		&__card,
		&__paypal,
		&__crypto
			img
				margin-top 10px
		&__button
			margin-bottom 10px
		&__close
			right 50%
			transform translateX(50%)
