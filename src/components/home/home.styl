.home
	position relative
	padding-top 130px
	margin-bottom 70px
	&__background
		position absolute
		width 100%
		top 0
		height 1920px
		overflow hidden
		&_after
			position absolute
			width 150%
			height 100%
			.inner
				position absolute
				width 150%
				height 100%
				background-image linear-gradient(to right, #d0ebfc 0%, #e0d7c7 100%)
				transform rotate(-25deg)
				transform-origin 0 100%
		&_before
			position absolute
			width 150%
			height 1080px
			.inner
				position absolute
				width 300%
				height 100%
				background-color #e6f2ff
				opacity 0.5
				transform rotate(-25deg)
				transform-origin 0% 100%
	p
		text-transform uppercase
		color gray
	&__title
		margin-top 80px
		h1
			padding-bottom 30px
	&__description
	&__caption
		span
			font-weight 700
	&__caption
		span
			color #2c3035
	&__description
		padding-top 70px
		padding-bottom 65px
		span
			color pink
	&__profit
		width 460px
		margin auto
		padding-top 40px
		font 700 25px mainFont
		text-align center
	&__player
		padding-bottom 130px
	&__video
		position relative
		height 338px
		width 596px
		border-radius 4px
		border 3px solid #6a79a8
		margin-bottom 50px
	&__control
		position absolute
		background url('../images/control.png')
		bottom 10px
		left 20px
		width 550px
		height 26px
		background-size contain
		background-repeat no-repeat
		cursor pointer
	&__screen
		position absolute
		top -40px
		left 25px
		width 490px
		height 370px
		background url('../images/screen.png')
		background-size contain
		background-repeat no-repeat
		cursor pointer
	&__play
		position relative
		top 118px
		left 250px
		width 89px
		height 89px
		border-radius 50%
		box-shadow 0 0 59px rgba(255, 76, 124, 0.35)
		background-color #ff4c7c
		cursor pointer
	&__play_btn
		position absolute
		top 18px
		left 31px
		width 36px
		height 55px
		background url('../images/play.png')
		background-size contain
		background-repeat no-repeat
		cursor pointer
	&__experts
		position absolute
		top 30px
		right -600px
		background url('../images/experts.png')
		background-size cover
		background-repeat no-repeat
		height 920px
		width 468px

			

